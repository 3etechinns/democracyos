body
  font-family 'Open Sans', sans-serif
  font-size 16px
  color rgba(#000, .8)
  overflow visible

h1,
h2,
h3,
p
  font-weight 400
  line-height 1.4
  color inherit

p
  font-size 1em
  font-family 'Noto Serif', serif

h1,
h2,
h3
  line-height 1.2
  font-weight 600

h1
  font-size 3em
  margin-top 1em
  margin-bottom .5em

h2
  font-size 1.75em
  margin-top 1.2em
  margin-bottom .8em

h3
  font-size 1em
  margin-top 1.375em
  margin-bottom 1.375em

.lead
  font-size 1.2em

@import './styleguide'
