- var closed = feed.closingAt && +new Date(feed.closingAt) < Date.now()
- var participants = feed.law.participants || []

.row
  article.col-xs-12.col-md-8.col-md-offset-2.newsfeed
    header
      h1=feed.law.mediaTitle
      small
        i.glyphicon.glyphicon-user
        - var cardinality = participants.length == 1 ? 'singular' : 'plural'
        | #{ participants.length } #{t('proposal-article.participant.' + cardinality)}
      - if (feed.law.tag)
        small.tag
          i.glyphicon.glyphicon-tag
          =feed.law.tag.name
      small.closing-at(class=closed ? 'closed' : (feed.law.closingAt ? 'closing' : 'unknown'))
        i.glyphicon.glyphicon-time
        - if (feed.law.closingAt)
          span.time-ago-label= (closed ? t('common.closed') : t('common.close')) + " "
          span.meta-item.meta-timeago.ago(data-time=feed.law.closingAt.toString())
        - else
          span.meta-item.meta-timeago.unknown= t('article.unknown-closing-date')
    section
      - if (feed.type == 'law-published' || feed.type == 'law-voted')
        .row
          - var classes = feed.image ? 'col-sm-6' : 'col-sm-12'
          .col-xs-12(class=classes)
            !=feed.paragraphs.html
            - if (feed.paragraphs.more)
              p.read-more: a(href="")= t('common.read-more')
          - if (feed.image)
            .col-xs-12.col-sm-6
              img(src=feed.image)
      - else if (feed.type == 'law-commented')
        p.comment #{feed.comment}
          .arrow-down