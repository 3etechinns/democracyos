body.newsfeed #content
  background #f0f0f0

@import './forum-card/styles'

boxSize = 6
color = #888
color2 = #aaa

.newsfeed-content
  color #000
  margin-left auto
  margin-right auto
  padding 0 15px 40px
  max-width 570px

  .title
    h2
      color #666
      font-weight 300
      margin 1em 0 .7em

  .forum-settings
    background white
    margin-bottom 22px
    padding 10px
    overflow hidden

    section
      margin-top 12px

    footer
      margin-top 12px

    .profile
      margin-left 3px

      img
        display inline-block
        width 50px
        border-radius 100px

      span.name
        display inline
        margin-left 10px
        font-weight bold
        font-size 12px
        line-height 20px
        padding-top 4px
        padding-right 12px
        max-width 150px

    .name
      height 50px
      line-height 50px
      margin-left 12px
      color #40a660
      font-family 'Open Sans', sans-serif
      font-size 12px
      font-weight 100

    .btn
      height 50px
      line-height 48px
      padding 0 12px
      font-weight 900
      font-size 16px

    .btn
      color #fff
      font-weight bold
      padding 0 12px
      text-transform uppercase

      &.go-to-forum
        color #337ab7

        i.glyphicon-cog
          margin-top 16px

    .purple
      background-color #8156a6
      border-color #a573d1
      color #fff
      font-weight bold

      &:hover
        background-color #a573d1
        color #fff
      & + .arrow-down
        border-top-color #8156a6

  .forum-pagination
    display block
    position relative
    min-height 32px
    text-align center

    &.loading
      .msg-more,
      .msg-empty
        display none

      .loader
        opacity 1
        transition-delay 1s
        transition-duration .3s

    &.empty
      .msg-more
        display none

      .msg-empty
        display inline-block

    .msg-empty
      display none

    .loader
      opacity 0
      position absolute
      left 50%
      top 50%
      margin-right 8px
      margin-left 12px
      border-radius 100%
      width boxSize * 1px
      height boxSize * 1px
      box-shadow boxSize*1px boxSize*1px color2,
        boxSize*-1px boxSize*1px color,
        boxSize*-1px boxSize*-1px color2,
        boxSize*1px boxSize*-1px color
      animation spin ease infinite 4s
      transition-property opacity

@-webkit-keyframes spin {
  0%,
  100% {
      box-shadow: boxSize*1px boxSize*1px color2,
      boxSize*-1px boxSize*1px color,
      boxSize*-1px boxSize*-1px color2,
      boxSize*1px boxSize*-1px color
  }

  25% {
      box-shadow: boxSize*-1px boxSize*1px color,
      boxSize*-1px boxSize*-1px color2,
      boxSize*1px boxSize*-1px color,
      boxSize*1px boxSize*1px color2
  }

  50% {
      box-shadow: boxSize*-1px boxSize*-1px color2,
      boxSize*1px boxSize*-1px color,
      boxSize*1px boxSize*1px color2,
      boxSize*-1px boxSize*1px color
  }

  75% {
      box-shadow: boxSize*1px boxSize*-1px color,
      boxSize*1px boxSize*1px color2,
      boxSize*-1px boxSize*1px color,
      boxSize*-1px boxSize*-1px color2
  }
}
