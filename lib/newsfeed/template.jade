.container.newsfeeds
  - if (user.logged())
    .row
      article.newsfeed.start.col-xs-10.col-md-6.col-md-offset-3.col-xs-offset-1
        .profile.pull-left
          img(src=user.avatar)
        a.name.pull-left(href='#') #{user.firstName} #{user.lastName}
  - else
    .jumbotron.text-center
      h1=t('newsfeed.welcome.title')
      p!=t('newsfeed.welcome.body')
  section.row.forums
  .row
    .col-xs-10.col-md-6.col-md-offset-3.col-xs-offset-1
      p.loading-container.hide
      button.btn.purple.btn-block.load-more.hide=t('newsfeed.button.load-more')
      p.nothing.hide.text-center=t('newsfeed.nothing-to-show')
